<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<meta name="description" content="">
		<meta name="author" content="">

		<title>Login Template</title>

		<link rel="stylesheet" href="{{ asset('css/fontawesome.css') }}">
		<link rel="stylesheet" href="{{ asset('css/templatemo-space-dynamic.css') }}">
		<link rel="stylesheet" href="{{ asset('css/animated.css') }}">
		<link rel="stylesheet" href="{{ asset('css/owl.css') }}">
		<link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
		<script src="{{ asset('fontawesome/js/all.js') }}"></script>
		<link rel="preconnect" href="https://fonts.gstatic.com">
		<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet"> {% block stylesheets %}{% endblock %}{% block javascripts %}{% endblock %}
		</head>
	</html>

	<body>

		<div id="contact" class="contact-us section">
			<div class="container" style="display: flex; justify-content: center">
					<div class="col-lg-6 wow fadeInRight" data-wow-duration="0.5s" data-wow-delay="0.25s" >
						<form id="contact" action="{{ path('login')}}" method="post">
							<div class="row">
								<a href="{{ path('home')}}"><i class="fas fa-times"></i></a>
								<div class="col-lg-12">
									{% for message in app.flashes('error') %}
										<div class="alert alert-danger" role="alert">
											{{message}}
										</div>
									{% endfor %}
								</div>
								<div class="text-center" style="margin-bottom: 5%">
									<h1>Connexion</h1>
								</div>
								<div class="col-lg-12">
									<fieldset>
										<input type="text" placeholder="Email" name="email" id="email" class="form-control" required>										
									</fieldset>
								</div>
								<div class="col-lg-12" style="margin-bottom: 5%">
									<fieldset>
										<input type="password" placeholder="Password" name="password" id="password" class="form-control" required>
									</fieldset>
									<a href="{{ path('forgot-password') }}">Mot de passe oubli√© ?</a>
								</div>
								<div class="col-lg-12 text-center">
									<fieldset>
										<button type="submit" id="form-submit" class="main-button">Se Connecter</button>
									</fieldset>
								</div>
								<div class="col-lg-12" style="margin-top: 10%; align: center">
									Vous n'avez pas de compte?
									<a class="text-center" href="{{ path('register') }}">Inscrivez-vous</a>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
        
		<script src="{{ asset('js/owl-carousel.js') }}"></script>
		<script src="{{ asset('js/animation.js') }}"></script>
		<script src="{{ asset('js/imagesloaded.js') }}"></script>
		<script src="{{ asset('js/templatemo-custom.js') }}"></script>
		<script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>
		<script src="{{ asset('js/jquery.min.js') }}"></script>	
	
	</body>
