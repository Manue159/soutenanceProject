{% extends 'base.html.twig' %}

{% block title %}Submit Pannes
{% endblock %}

{% block body %}

    <div id="contact" class="contact-us section">
        <div class="container" style="display: flex; justify-content: center">
            <div class="col-lg-6 wow fadeInRight" data-wow-duration="0.5s" data-wow-delay="0.25s">                
                <form id="contact" action="{{ path('submit-panne') }}" method="post">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group text-center">
                                {% for message in app.flashes('error') %}
                                    <div class="alert alert-danger" role="alert">
                                        {{message}}
                                    </div>
                                {% endfor %}
                            </div>
                            <div class="text-center" style="margin-bottom: 5%">
                                <h1>Soumettre une panne</h1>
                            </div>
                            <fieldset>
                                <div class="form-group">
                                    <select name="typePane" id="pole" required>
                                        <option value="">Choisissez le type de votre panne</option>
                                        <option value="materielle">Matérielle</option>
                                        <option value="logicielle">Logicielle</option>
                                    </select>
                                </div>
                            </fieldset>
                            <fieldset>
                                <div class="form-group">
                                    <select name="typePane" id="pole" required>
                                        <option value="">Sélectionnez le matériel en panne</option>
                                        {% for materiel in materiels %}
                                            <option value="{{materiel.numero_serie}}"> {{materiel.numero_serie}} </option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </fieldset>
                            <fieldset>
                                <div class="form-group">
                                    <textarea name="descriptionPanne" id="descriptionPanne" cols="30" rows="10" required>Décrivez votre panne</textarea>
                                </div>
                            </fieldset>
                            <div class="col-lg-12 text-center">
                                <fieldset>
                                    <button type="submit" id="form-submit" class="main-button">Soumettre</button>
                                </fieldset>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
	</div>

{% endblock %}
