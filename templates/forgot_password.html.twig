	<body>
		<div id="contact" class="contact-us section">
			<div class="container">
				<div class="col-lg-6 wow fadeInRight" data-wow-duration="0.5s" data-wow-delay="0.25s">
					<form id="contact" action="{{ path('forgot-password')}}" method="post">
						<div class="row">
							<div class="col-lg-12">
								{% for message in app.flashes('error') %}
									<div class="alert alert-danger" role="alert">
										{{message}}
									</div>
								{% endfor %}
							</div>
							<div class="col-lg-12">
								<fieldset>
									<input type="text" placeholder="Email" name="email" id="email" class="form-control">
								</fieldset>
							</div>
							<div class="col-lg-12">
								<fieldset>
									<input type="password" placeholder="Password" name="password" id="password" class="form-control">
								</fieldset>
							</div>
							<div class="col-lg-12 text-center">
								<fieldset>
									<button type="submit" id="form-submit" class="main-button">Se Connecter</button>
								</fieldset>
							</div>
							<div class="col-lg-12" style="margin-top: 15%; align: center">
								<div class="col-lg-12 text-center" style="margin-top: 5%">
									<a class="btn btn-dark" href="{{ path('home') }}">Revenir Ã  l'accueil</a>
								</div>
								<div class="contact-dec">
									<img src="{{asset('images/about-left-image.png')}}" alt="">
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>

		<script src="{{ asset('js/owl-carousel.js') }}"></script>
		<script src="{{ asset('js/animation.js') }}"></script>
		<script src="{{ asset('js/imagesloaded.js') }}"></script>
		<script src="{{ asset('js/templatemo-custom.js') }}"></script>
		<script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>
		<script src="{{ asset('js/jquery.min.js') }}"></script>

	</body>